    <link rel='stylesheet' href='/stylesheets/style.css' />

    <h1 class="title">{{title}}</h1>

    <body>
      <form action="/posts">
        <button type="submit" class="button-group" id="home">Home</button>
      </form>

      <form action="/profile">
        <button type="submit" id="profile">Profile</button>
      </form>

      <form action="/login">
        <button type="submit" id="logout">Log out</button>
      </form>
    </div>

    <h1>Timeline</h1>

    <form id="new-post-form" action="/posts" method="post">
      <label for="message">Message: </label>
      <input id="message" type="text" name="message" value="">
      <input type="submit" value="Share post">
    </form>

    <div class="tlposts" style="height: 500px; overflow:auto;" >
      <ul class="posts">
        {{#each posts}}
        <li>{{this.owner}} </li>
        <li>{{this.message}} </li>
        <li>{{this.date}} </li>
        <br>
        {{/each}}
      </ul>
    </div>
  </body>
