<h1 class="title">❄️🥶Sign Up🥶❄️</h1>


<script type="text/javascript">
  function CheckGender(val) {
    var element = document.getElementById('Gender')
    if (val=='Other')
      element.style.display="inline-block"
    else
      element.style.display='none'
  }
</script>

<div class="align"; padding="2px">
<form id="sign-up-form" action="/1" method="post">
  <input type="text" name="username" placeholder="Username" maxlength="20" required>
  <input type="password" name="password" placeholder="Password" required>
  <br><br>

  <input type="text" name="title" placeholder="Title" required>
  <input type="text" name="firstname" placeholder="First name" required>
  <input type="text" name="lastname" placeholder="Last name" required>
  <br>
  <br>
  <select class="User-gender" id="Gender1" name="Gender" placeholder="Gender" onchange='CheckGender(this.value);' required>

    <option value="" disabled selected>Gender (select)</option>
    <option value="Female">Female</option>
    <option value="Male">Male</option>
    <option value="Other">Other</option>
    <option value="NA">I'd rather not say</option>
  </select>
  <input type="text" name="Gender" id="Gender" placeholder="Your gender identity" style='display:none;'/>
  <br>
    <br>
  <input type="date" name="Birthday" placeholder="Birthday (dd/mm/yyyy)" required>
  <br>
  <br>
  <textarea name="About" placeholder="About me" rows="2" cols="50"></textarea>
  <br>
  <br>
  <button class="button button1" class="alignbutton" type="submit" value="Submit">Submit</button>
</form>
</div>
