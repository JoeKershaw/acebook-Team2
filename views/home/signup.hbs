<head>
  <link rel='stylesheet' href='/stylesheets/profile.css' />
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@200;400;600&display=swap" rel="stylesheet">
</head>

<p>Sign Up</p>
<h1 class="title">{{title}}</h1>

<h1>❄️🥶❄️🥶❄️🥶❄️</h1>

<script type="text/javascript">
  function CheckGender(val) {
    var element = document.getElementById('Gender')
    if (val=='Other')
      element.style.display='block'
    else
      element.style.display='none'
  }
</script>

<form id="sign-up-form" action="/1" method="post">
  <input type="text" name="username" placeholder="Username" maxlength="20">
  <input type="password" name="password" placeholder="Password">
  <br><br>
  <input type="text" name="name" placeholder="Name: first, last" maxlength="20">
  <select class="User-gender" name="Gender" placeholder="Gender" onchange='CheckGender(this.value);'>
    <option value="Female">Female</option>
    <option value="Male">Male</option>
    <option value="Other">Other</option>
    <option value="NA">I'd rather not say</option>
  </select>
  <input type="text" name="Gender" id="Gender" placeholder="Your gender identity" style='display:none;'/>
  <input type="date" name="Birthday" placeholder="Birthday (dd/mm/yyyy)">
  <br>
  <textarea name="About" placeholder="About me" rows="5" cols="57"></textarea>
  <br>
  <button type="submit" value="Submit">Submit</button>
</form>

<div>
  <form action="/">
    <button type="submit" id="back">Cancel</button>
  </form>
</div>
