</head>


<div>
  <form action="/">
    <button type="submit" id="logout">Log Out</button>
  </form>
</div>


<img src="../Logo/LOGO.png" alt="Icebook logo">


<h1 class="title">❄️🥶{{user.firstname}}'s Profile🥶❄️</h1>

  <div class="alignbutton">

  <form action="/posts">
    <button type="submit" id="alignbutton">Home</button>
  </form>
</div>

<div class="alignbutton">
  <form action="/profile/edit">

    <button type="submit" id="edit">Edit Profile</button>

  </form>
</div>

<br>
<br>


<div class="tlposts", class="text">

    <section>
      {{user.title}} {{user.firstname}} {{user.lastname}}
    </section>
    <br>
    <section>
      {{user.Gender}}
    </section>
    <br>
    <section>
      {{user.Birthday}}
    </section>
    <br>
    <section>
      {{user.About}}
    </section>

</div>


  <div class="fixed">
    <form id="new-post-form" action="/profile" method="post">
      <label for="message">New post: </label>
      <input id="message" type="text" name="message" value="">
      <button type="submit" value="Share">Share</button>
    </form>
  </div>




<h1 class="title">❄️🥶{{user.firstname}}'s Posts🥶❄️</h1>
<form id="new-post-form" action="/profile" method="post">
  <label for="message">New post: </label>
  <input id="message" type="text" name="message" value="">
  <button type="submit" value="Share">Share</button>
</form>

<br>

<div class="tlposts" style="height: 500px; overflow:auto;">
  {{#each posts}}
  <div class="postbox" style="overflow-wrap: break-word;">
  <b>{{this.message}}</b>
  <br>
  <br>
  <small><i>{{this.date}}</i></small>
  <br>
  <br>
  <form id="delete-post" action="/profile/delete" method="post">
   <input type="hidden" name="delpost" value="{{this._id}}">
   <button type="submit" value="donut">Delete post</button>
 </form>
</div>
  {{/each}}

</div>
